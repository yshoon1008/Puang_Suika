@startuml UseCaseDiagram.puml
skinparam shadowing false
left to right direction

actor Player as "Player"

rectangle "Puang Suika Game" {

  usecase "게임 시작\n(Start Game)" as UC_Start
  usecase "메뉴에서 게임 모드 선택\n(Select Play Mode)" as UC_SelectPlay
  usecase "메뉴에서 도감 보기\n(Open Gallery)" as UC_OpenGallery

  usecase "푸앙 떨어뜨리기\n(Drop Puang)" as UC_Drop
  usecase "푸앙 이동\n(Move Puang Horizontally)" as UC_Move
  usecase "푸앙 병합 및 진화\n(Merge & Evolve)" as UC_Merge
  usecase "점수 확인\n(View Score)" as UC_Score
  usecase "게임 오버 확인\n(Check Game Over)" as UC_GameOver
  usecase "게임 재시작\n(Restart Game)" as UC_Restart

  usecase "배경 음악/효과음 재생\n(Play BGM/SFX)" as UC_Sound
  usecase "프로그램 종료\n(Exit Game)" as UC_Exit
}

Player --> UC_Start
Player --> UC_SelectPlay
Player --> UC_OpenGallery
Player --> UC_Drop
Player --> UC_Move
Player --> UC_Score
Player --> UC_GameOver
Player --> UC_Restart
Player --> UC_Sound
Player --> UC_Exit

UC_Drop --> UC_Merge : <<include>>
UC_Merge --> UC_Score : <<include>>
UC_GameOver --> UC_Score : <<include>>

@enduml
